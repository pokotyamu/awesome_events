<div class="page-header">
  <h1>イベント一覧</h1>
</div>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-8">
      <div class="list-group">
        <%= link_to(event, class: 'list-group-item') do %>
          <h4 class="list-group-item-heading">
            <%= event.name %>
          </h4>
          <p class="list-group-item-text">
            <%= event.start_time.strftime('%Y/%m/%d/%H:%M') %> - <%= event.end_time.strftime('%Y/%m/%d/%H:%M') %>
          </p>
        <% end %>
      </div>
    </div>
    <% if event.created_by?(current_user) %>
      <div class="col-md-2">
        <%= link_to '編集', edit_event_path(event), class: 'btn btn-info btn-lg btn-block' %>
        </div>
      <div class="col-md-2">
        <%= link_to '削除', event_path(event), method: :delete, data: { confirm: '本当に削除しますか？'}, class: 'btn btn-danger btn-lg btn-block' %>
      </div>
    <% end %>
  <% end %>
</div>
